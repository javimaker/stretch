{
  "manifest_version": 3,
  "name": "MIT STRETCH Study",
  "version": "0.6.0",
  "description": "Companion extension for the MIT STRETCH study",
  "icons": {"16": "logo/Logo_physera_16.png",
           "48": "logo/Logo_physera_48.png",
          "128": "logo/Logo_physera_128.png"
        },
  "background": {
    "service_worker": "js/background.js"
  },
  "homepage_url": "https://www.mit.edu",
  "short_name": "Stretch-MIT",
  "permissions" : [
  	"tabs",
  	"storage",
  	"alarms"
  ],
  "host_permissions": [
    "https://physera.com/",
    "https://*.cloudfunctions.net/",
    "http://*.cloudfunctions.net/"
  ],
  "action": {
        "default_title": "MIT STRETCH! Study",
        "default_popup": "popup.html"
    }
}