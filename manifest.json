{
  "manifest_version": 2,
  "name": "MIT Zoom Break Study",
  "version": "0.9",
  "description": "Companion extension for the MIT Zoom Break Study. For selected participants only!",
  "icons": {"16": "logo/logo_16.png",
           "48": "logo/logo_48.png",
          "128": "logo/logo_128.png"
        },
  "background": {
    "scripts": ["js/background.js"]
  },
  "homepage_url": "https://www.mit.edu",
  "short_name": "Stretch-MIT",
  "permissions" : [
  	"tabs",
  	"storage",
  	"alarms",
    "https://physera.com/",
    "https://*.cloudfunctions.net/",
    "http://*.cloudfunctions.net/"
  ],
  "browser_action": {
        "default_title": "MIT Zoom Break Study",
        "default_popup": "popup.html"
    }
}