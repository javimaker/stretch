{
  "manifest_version": 2,
  "name": "MIT STRETCH! Study",
  "version": "0.5.0",
  "description": "Reminds you to stretch and administers test surveys",
  "icons": {"16": "logo/Logo_physera_16.png",
           "48": "logo/Logo_physera_48.png",
          "128": "logo/Logo_physera_128.png"
        },
  "background": {
    "scripts": ["js/background.js"]
  },
  "homepage_url": "https://javimaker.github.io/stretch-mit/",
  "short_name": "MITStretch",
  "permissions" : [
  	"tabs",
  	"storage",
  	"alarms",
    "https://physera.com/"
  ],
  "browser_action": {
        "default_title": "MIT STRETCH! Study",
        "default_popup": "popup.html"
    }
}